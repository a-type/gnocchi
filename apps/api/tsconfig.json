{
	"compilerOptions": {
		"target": "es6",
		"lib": ["dom", "esnext"],
		"outDir": "./dist",
		"allowJs": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "es2022",
		"moduleResolution": "Node16",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"downlevelIteration": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"declaration": false
	},
	"include": ["src/**/*.ts"]
}
