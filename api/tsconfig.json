{
	"compilerOptions": {
		"target": "es6",
		"lib": ["dom", "esnext"],
		"outDir": "./dist",
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"downlevelIteration": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"declaration": false
	},
	"include": ["src/**/*.ts"],
	"references": [
		{
			"path": "../common/tsconfig.json"
		}
	]
}
