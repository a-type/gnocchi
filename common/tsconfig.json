{
	"compilerOptions": {
		"target": "es6",
		"lib": ["dom", "esnext"],
		"outDir": "./dist",
		"allowJs": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"downlevelIteration": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"declaration": true,
		"declarationMap": true,
		"composite": true
	},
	"include": ["src/**/*.ts"]
}
